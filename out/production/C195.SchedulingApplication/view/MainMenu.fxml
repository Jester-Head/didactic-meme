<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/null"
            fx:controller="controller.MainMenu">
    <center>
        <AnchorPane>
            <children>
                <VBox alignment="TOP_CENTER" layoutY="47.0" prefHeight="237.0" prefWidth="640.0" spacing="10.0"
                      AnchorPane.bottomAnchor="54.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="47.0">
                    <Label fx:id="mainMenuLbl1" alignment="CENTER" prefHeight="70.0" prefWidth="132.0" text="Main Menu"
                           underline="true">
                        <font>
                            <Font name="Century Gothic" size="24.0"/>
                        </font>
                    </Label>
                    <Button fx:id="appointmentsBtn" alignment="CENTER" mnemonicParsing="false"
                            onMouseClicked="#onClickViewAppointments" prefHeight="30.0" prefWidth="125.0"
                            text="Appointments">
                        <font>
                            <Font name="Century Gothic" size="12.0"/>
                        </font>
                    </Button>
                    <Button fx:id="recordsBtn" alignment="CENTER" mnemonicParsing="false"
                            onMouseClicked="#onClickViewRecords" prefHeight="30.0" prefWidth="125.0"
                            text="Customer Records" textAlignment="CENTER" wrapText="true">
                        <font>
                            <Font name="Century Gothic" size="12.0"/>
                        </font>
                    </Button>
                    <Button fx:id="reportsBtn" alignment="CENTER" mnemonicParsing="false"
                            onMouseClicked="#onClickViewReports" prefHeight="30.0" prefWidth="125.0" text="Reports">
                        <font>
                            <Font name="Century Gothic" size="12.0"/>
                        </font>
                    </Button>
                </VBox>
            </children>
        </AnchorPane>
    </center>
    <top>
        <AnchorPane prefWidth="400.0">
            <children>
                <Label fx:id="welcomeLbl" alignment="CENTER" layoutX="254.0" layoutY="-3.0" prefHeight="70.0"
                       prefWidth="132.0" text="Welcome" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="Century Gothic" size="24.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>
    <bottom>
        <AnchorPane prefHeight="74.0" prefWidth="640.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="signOutBtn" layoutX="555.0" layoutY="5.0" minHeight="30.0" minWidth="70.0"
                        mnemonicParsing="false" onMouseClicked="#onClickSignOut" prefWidth="70.0" text="Sign Out"
                        AnchorPane.bottomAnchor="5.399999999999999">
                    <font>
                        <Font name="Century Gothic" size="12.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
